<script>
  // Bottom Navbar Switching
  document.querySelectorAll('.navbar a').forEach(a=>{
    a.addEventListener('click', e=>{
      e.preventDefault();
      document.querySelectorAll('.navbar a').forEach(el=>el.classList.remove('active'));
      a.classList.add('active');
      const page = a.dataset.page;
      document.querySelectorAll('[id^="page-"]').forEach(p=>p.classList.add('hidden-page'));
      document.getElementById('page-'+page).classList.remove('hidden-page');
    });
  });

  // Sample doctors data
  const doctors = [
    {id:1,name:"Dr. Aditi Sharma",specialty:"Cardiologist",experience:"12 yrs",hospital:"Apollo",distance:2.3,rating:4.8,image:"https://via.placeholder.com/55"},
    {id:2,name:"Dr. Rajesh Kumar",specialty:"Dermatologist",experience:"8 yrs",hospital:"Fortis",distance:4.1,rating:4.6,image:"https://via.placeholder.com/55"},
    {id:3,name:"Dr. Meera Iyer",specialty:"Pediatrician",experience:"10 yrs",hospital:"Max",distance:3.5,rating:4.9,image:"https://via.placeholder.com/55"}
  ];

  // Render Doctor List
  function renderDoctors(list){
    const container = document.getElementById("doctor-list");
    container.innerHTML="";
    list.forEach(d=>{
      container.innerHTML+=`
        <div class="card-doctor flex items-center p-3">
          <img src="${d.image}" class="w-12 h-12 rounded-full mr-3">
          <div class="flex-1">
            <h5 class="font-semibold">${d.name}</h5>
            <p class="text-xs text-gray-500">${d.specialty} ‚Ä¢ ${d.hospital}</p>
            <p class="text-xs text-gray-500">${d.experience} ‚Ä¢ ${d.distance} km ‚Ä¢ ‚≠ê ${d.rating}</p>
          </div>
          <button class="bg-teal-600 text-white px-2 py-1 rounded text-xs">Book</button>
        </div>
      `;
    });
  }
  renderDoctors(doctors);
</script>

